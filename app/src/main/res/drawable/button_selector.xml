<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Bottom 2dp Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#D9D9D9" />
                </shape>
            </item>

            <!-- White Top color -->
            <item android:bottom="6px" android:right="6px">
                <shape android:shape="rectangle">
                    <solid android:color="#fafafa" />
                </shape>
            </item>
            <item android:bottom="0dp" android:right="0dp">
                <shape>
                    <gradient android:angle="135" android:endColor="@color/golden_tezosrio" android:startColor="@color/golden_tezosrio" />
                    <stroke android:width="1dp" android:color="@color/golden_tezosrio" />
                    <corners android:radius="0dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>