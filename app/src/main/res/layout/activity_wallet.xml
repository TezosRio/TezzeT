<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/ligth_grey_tezosrio"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/linearLayoutLock"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/darkGrey"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15sp"
            android:visibility="gone"
            android:weightSum="1">

            <EditText
                android:id="@+id/editTextUnlockPhrase"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_margin="3sp"
                android:layout_weight="0.85"
                android:background="@color/grey"
                android:hint="Unlock with your passphrase"
                android:inputType="textPassword"
                android:padding="15sp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_unlock"
                android:layout_width="0sp"
                android:layout_height="59sp"
                android:layout_margin="3sp"
                android:layout_weight="0.15"
                android:text="OK" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="top"
            android:layout_marginBottom="0dp"
            android:background="@color/ligth_grey_tezosrio"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="20sp"
            android:paddingTop="50sp"
            android:paddingRight="20sp"
            android:visibility="visible">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/linearLayoutMain"
                android:layout_alignTop="@+id/linearLayoutMain"
                android:layout_marginBottom="30dp"
                android:src="@drawable/tezzet_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/textViewWalletLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEMO WALLET"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey_tezosrio"
                    android:fontFamily="sans-serif-black" />


                <TextView
                    android:id="@+id/textViewAliasLabel"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="@dimen/mgTitle"
                    android:fontFamily="sans-serif-light"
                    android:text="Name" />

                <EditText
                    android:id="@+id/editTextAlias"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@drawable/edittext_shadow"
                    android:hint="Type in a name for your wallet"
                    android:padding="15sp"
                    android:fontFamily="sans-serif-light"
                    android:elevation="10dp"/>

                <TextView
                    android:id="@+id/textViewAddressLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="@dimen/mgTitle"
                    android:text="Address"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    />

                <TextView
                    android:id="@+id/textViewAddress"
                    android:background="@drawable/edittext_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:padding="15sp"
                    android:text=""
                    android:elevation="10dp"
                    android:textColor="@color/darkGrey"
                    android:shadowRadius="2"
                    android:shadowColor="#0000ff"
                    android:shadowDx="2"
                    android:shadowDy="4"
                    />

                <TextView
                    android:id="@+id/textViewBalanceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="@dimen/mgTitle"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    android:text="Balance" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewBalance"
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/edittext_shadow"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="30sp"
                        android:text=""
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:padding="150sp"
                        android:elevation="10dp"
                        android:progressBackgroundTint="@color/colorPrimaryDark"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/golden_tezosrio"
                    android:text="Send"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/golden_tezosrio"
                    android:text="Receive"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
